<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_user_item"
    android:paddingStart="@dimen/padding_user_item"
    android:paddingEnd="@dimen/padding_user_item"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/UserImageAvata"
        android:layout_width="@dimen/IconSize"
        android:layout_height="@dimen/IconSize"
        android:src="@drawable/a5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_user_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            />

        <TextView
            android:id="@+id/userAdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung phim tuyệt vời"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/padding_user_item"
            android:background="#F3382A"/>

    </LinearLayout>

</LinearLayout>